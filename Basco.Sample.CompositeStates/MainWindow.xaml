<Window x:Class="Basco.Sample.CompositeStates.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:CompositeStates="clr-namespace:Basco.Sample.CompositeStates"
        Title="Basco Demo V1.3 - Hierarchical State Machine / Composite States"
        Width="488"
        Height="528">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <CompositeStates:DriverControl x:Name="DriverOne"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Top" />
            <CompositeStates:DriverControl x:Name="DriverTwo"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Top" />
        </StackPanel>
    </Grid>
</Window>
